<h1><%= @figure.name %></h1>

<h2>Landmarks</h2>
<ul>
  <% @figure.landmarks.each do |landmark| %>
    <li>
      <a href="/landmarks/<%=landmark.id%>"><%=landmark.name%></a>
    </li>
  <% end %>
</ul>

<h2>Titles</h2>
<ul>
  <% @figure.titles.each do |title| %>
    <li>
      <a href="/titles/<%=title.id%>"><%=title.name%></a>
    </li>
  <% end %>
</ul>

