<h1>Landmarks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Year Completed</th>
    <th>Figure</th>
  </tr>
  <% @landmarks.each do |landmark| %>
  <tr>
    <td><%= landmark.name %></td>
    <td><%= landmark.year_completed %></td>
    <% if landmark.figure != nil %>
      <td><a href = "/figures/<%= landmark.figure.id %>"><%= landmark.figure.name %></a></td>
    <% end %>
    <td><a href= "/landmarks/<%=landmark.id%>">Show</a></td>
    <td><a href= "/landmarks/<%=landmark.id%>/edit">Edit</a></td>
  </tr>
  <% end %>
</table>
<br>
